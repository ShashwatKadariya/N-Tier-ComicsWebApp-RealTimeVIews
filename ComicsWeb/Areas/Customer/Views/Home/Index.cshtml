@model IEnumerable<Comic>

<div class="container-fluid px-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var comic in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-light">
                    <div class="position-relative">
                        <div style="padding-top: 150%; position: relative;">
                            <img src="@comic.ImageUrl"
                                 alt="@comic.Title"
                                 class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover"
                                 loading="lazy" />
                        </div>
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-primary fw-semibold">
                                @comic.Price.ToString("C")
                            </span>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center mb-3 text-truncate fw-bold">
                            @comic.Title
                        </h5>
                        
                        <p class="card-body">
                            Views: <span id="comicViewCount-@comic.Id">@comic.ViewCount</span>
                        </p>

                        <a asp-action="Details"
                           asp-route-id="@comic.Id"
                           class="btn btn-primary mt-auto">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts{
    <script src="~/js/notification.js"></script>
}





