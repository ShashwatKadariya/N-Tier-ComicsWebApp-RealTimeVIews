@using DataAccess.Entities
@model List<DataAccess.Entities.Comic>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">COMIC LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Comic" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                Create New COMIC
            </a>
        </div>
    </div>
    <table class="table table-borderless table-striped table-hover" id="tableData" style="width: 100%">
        <thead>
        <tr>
            <th style="font-size: 1.3rem;">
                Comic Name
            </th>
            <th style="font-size: 1.3rem;">
                Comic In Stock
            </th>
            <th style="font-size: 1.3rem;">
                Comic Price
            </th>
            <th style="font-size: 1.3rem;">
                Category
            </th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>


@section Scripts
{ 
    <script src="~/js/comic.js"></script>
}
