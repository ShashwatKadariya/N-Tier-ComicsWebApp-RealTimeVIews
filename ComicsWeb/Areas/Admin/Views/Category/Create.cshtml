@{
    ViewData["Title"] = "Create Category";
}
@model DataAccess.Entities.Category

<form asp-area="Admin" asp-controller="Category" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="small"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea type="" asp-for="Description" class="form-control"> </textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Go Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}